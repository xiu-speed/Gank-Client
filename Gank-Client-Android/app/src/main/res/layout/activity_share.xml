<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share_bg"
        android:paddingLeft="@dimen/llarge"
        android:paddingRight="@dimen/llarge"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/ssmall"

        >

        <TextView
            android:layout_marginTop="@dimen/small"
            android:layout_marginBottom="@dimen/medium"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_llarge"
            android:textColor="@color/black"
            android:text="分享"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_wechat"
                android:gravity="center"
                android:text="微信"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/share_friends_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_friends_groups"
                android:gravity="center"
                android:text="朋友圈"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/share_qq_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_qq_zone"
                android:gravity="center"
                android:text="QQ空间"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_sina_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_sina_weibo"
                android:gravity="center"
                android:text="微博"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_qq"
                android:gravity="center"
                android:text="QQ"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/share_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large"
                android:drawablePadding="@dimen/small"
                android:drawableTop="@mipmap/share_msg"
                android:gravity="center"
                android:text="短信"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>