<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">                 /
    <item android:state_pressed="true">//定义当button 处于pressed 状态时的形态。
        <shape>
            <solid android:startColor="@color/gray" />
            <stroke  android:width="@dimen/single_pixel" android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:startColor="@android:color/transparent" />
            <stroke  android:width="@dimen/single_pixel" android:color="@color/gray" />
        </shape>
    </item>
</selector>